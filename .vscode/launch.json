{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Debug React App (Firefox)",
        "type": "firefox",
        "request": "launch",
        "url": "http://localhost:5173",
        "webRoot": "${workspaceFolder}/src",
        "reAttach": true,
        "pathMappings": [
            {
                "url": "http://localhost:5173/src",
                "path": "${workspaceFolder}/client/src"
            }
        ]
    }
]
}
